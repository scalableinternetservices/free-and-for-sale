  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="user-signup" probability="100" type="ts_http">

      <!-- start out at the dashboard. Look at the products -->
      <request>
        <http url='/api/v1/products' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at posts -->
      <thinktime value="2" random="true"></thinktime>

      <!-- request to register  -->
      <request subst="true">
	       <http
	          url="/api/v1/category?category=Furniture"
	          version="1.1"
	          method="GET"
   	      >
	       </http>
      </request>

      <!-- Wait for 2 seconds -->
      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
	       <http
	          url="/api/v1/category?category=Books"
	          version="1.1"
	          method="GET"
	       >
        </http>
      </request>
      <!-- wait for up to 2 seconds, user is filling out new community form -->
      <thinktime value="2" random="true"></thinktime>

      <setdynvars sourcetype="random_number" start="1000" end="9999999">
    	<var name="random_email" />
      </setdynvars>


      <request subst="true">
        <http
	         url="api/v1/register_user"
	         method="POST"
           version="1.1"
  	       contents="email%5D=%%_random_email%%%40gmail.com&amp;password%5D=1234567&amp;commit=Create+account">
	      </http>
      </request>

      <request subst="true">
        <http
	         url="api/v1/auth_user"
	         method="POST"
           version="1.1"
  	       contents="email%5D=tianyan%40bigger.com&amp;password%5D=11111111&amp;commit=Create+account">
	      </http>
      </request>

      <request subst="true">
        <http
	         url="api/v1/product"
	         method="POST"
           version="1.1"
  	       contents="name%5D=google+pixel&amp;description%5D=best+smart+phone+right+now&amp;price%5D=654&amp;image_url%5D='http://cdn2.gsmarena.com/vv/pics/google/google-pixel-xl-2.jpg'&amp;commit=Create+product">
	      </http>
        <http_header name="Authorization" value="Bearer eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJ1c2VyX2lkIjoxfQ.XJkfgPWPC4g9WeJ2yGoHUmda1h0r14vJXCLhyHzYxTA"/>
      </request>

     </session>
  </sessions>
